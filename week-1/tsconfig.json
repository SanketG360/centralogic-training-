{
  "compilerOptions": {
   
    "target": "es6",                                  
    "module": "commonjs",  
    "outDir": "./dist",
    "rootDir": "./src", 
    "sourceMap": true,                          
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true, 
    "moduleResolution": "node",          
    "strict": true,                                    
    "skipLibCheck": true                                 
  },
  "include": [
    "src/**/*.ts"
    ],
    "exclude": [
    "node_modules"
    ]
} 
